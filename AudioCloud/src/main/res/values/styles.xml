        android:layout_width="25dp"
        android:layout_height="wrap_content"-->
    <style name="My_RadioButton" parent="android:Widget.Holo.Light.CompoundButton.RadioButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_radiobutton_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ProgressBarBig">
        <item name="android:indeterminateDrawable">@drawable/progress_big</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">48dip</item>
    </style>
