<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 正向旋转的圆 -->
    <item>
        <rotate 
            android:fromDegrees="0"
            android:toDegrees="720"
            android:pivotX="50%"
            android:pivotY="50%"
            android:drawable="@mipmap/spinner_big_inner"
            />
    </item>

    <!-- 逆向旋转的圆 -->
    <item >
        <rotate 
            android:fromDegrees="360"
            android:toDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:drawable="@mipmap/spinner_big_outer"
            />
    </item>
</layer-list>